!= form_for :user, url: users_path do |f|
  - if @user
    .errors
      - @user.errors.full_messages.each do |f|
        .error
          != f
  != f.label :name
  != f.text_field :name
  != f.label :email
  != f.text_field :email
  != f.label :password
  != f.password_field :password
  != f.label :confirm_password
  != f.password_field :password_confirmation
  != f.submit "Create User"
